<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical">
            <TextView
                android:id="@+id/calcExpression"
                android:text=""
                android:singleLine="true"
                style="@style/TextField" />
            <TextView
                android:id="@+id/calcResult"
                android:text="0"
                android:singleLine="true"
                style="@style/TextField"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numpad"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/operations"
        android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/extra_operations"
                android:orientation="horizontal">
                    <TextView
                        android:id="@+id/btn_del"
                        android:text="DEL"
                        style="@style/TextControlButton" />
                    <TextView
                        android:id="@+id/btn_clr"
                        android:text="C"
                        style="@style/TextControlButton" />
                    <TextView
                        android:id="@+id/filler"
                        android:text=""
                        style="@style/TextControlButton" />
            </LinearLayout> <!-- Text operations -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/seven_to_nine"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/btn_7"
                    android:text="7"
                    style="@style/NumberButton" />
                <TextView
                    android:id="@+id/btn_8"
                    android:text="8"
                    style="@style/NumberButton" />
                <TextView
                    android:id="@+id/btn_9"
                    android:text="9"
                    style="@style/NumberButton" />
            </LinearLayout> <!-- // Seven to nine -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/four_to_six"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/btn_4"
                    android:text="4"
                    style="@style/NumberButton" />
                <TextView
                    android:id="@+id/btn_5"
                    android:text="5"
                    style="@style/NumberButton" />
                <TextView
                    android:id="@+id/btn_6"
                    android:text="6"
                    style="@style/NumberButton" />
            </LinearLayout> <!-- // Four to six -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/one_to_three"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/btn_1"
                    android:text="1"
                    style="@style/NumberButton" />
                <TextView
                    android:id="@+id/btn_2"
                    android:text="2"
                    style="@style/NumberButton" />
                <TextView
                    android:id="@+id/btn_3"
                    android:text="3"
                    style="@style/NumberButton" />
            </LinearLayout> <!-- // One to three -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/zero_and_pt"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="155dp"
                    android:id="@+id/btn_0"
                    android:text="0"
                    style="@style/NumberButton" />
                <TextView
                    android:id="@+id/btn_pt"
                    android:text="."
                    style="@style/NumberButton" />
        </LinearLayout> <!-- // Zero and pt -->
    </LinearLayout> <!-- Numpad -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/operations"
        app:layout_constraintLeft_toRightOf="@id/numpad"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical">
            <TextView
                android:id="@+id/btn_div"
                android:text="/"
                style="@style/OperationButton"/>
            <TextView
                android:id="@+id/btn_mul"
                android:text="*"
                style="@style/OperationButton"/>
            <TextView
                android:id="@+id/btn_sub"
                android:text="-"
                style="@style/OperationButton"/>
            <TextView
                android:id="@+id/btn_add"
                android:text="+"
                style="@style/OperationButton"/>
            <TextView
                android:id="@+id/btn_ent"
                android:text="="
                style="@style/OperationButton"/>
    </LinearLayout> <!-- Operations -->
</androidx.constraintlayout.widget.ConstraintLayout>